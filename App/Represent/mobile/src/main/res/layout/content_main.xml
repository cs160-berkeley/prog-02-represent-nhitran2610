<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ninatran.represent.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#083d85">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/capitol"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Represent!"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#FCFAFA"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Enter Zip Code"
        android:id="@+id/ZipCodeNum"
        android:textColor="#b7c0c7"
        android:layout_marginTop="32dp"
        android:typeface="serif"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location"
        android:id="@+id/currentLocation"
        android:layout_below="@+id/ZipCodeNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:typeface="serif" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/buttonGo"
        android:layout_alignBottom="@+id/ZipCodeNum"
        android:layout_alignEnd="@+id/imageView"/>


</RelativeLayout>
