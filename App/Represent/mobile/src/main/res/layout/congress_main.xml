<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sen. Dianne Feinstein"
        android:id="@+id/rep_title"
        android:textAlignment="center"
        android:typeface="serif"
        android:textColor="#083D85"
        android:textSize="13sp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Democrat"
        android:id="@+id/party_name"
        android:textColor="#FF040404"
        android:textSize="11sp"
        android:layout_below="@+id/rep_title"
        android:layout_alignStart="@+id/rep_title"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:id="@+id/email"
        android:textSize="11sp"
        android:layout_below="@+id/party_name"
        android:layout_alignStart="@+id/rep_title"
        android:typeface="serif"
        android:textColor="#FF040404" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:id="@+id/website"
        android:textSize="11sp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:typeface="serif"
        android:textColor="#FF040404" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView18"
        android:src="@drawable/person"
        android:layout_alignTop="@+id/rep_title"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/website" />


</RelativeLayout>
