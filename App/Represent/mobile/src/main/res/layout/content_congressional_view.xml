<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CongressionalView"
    tools:showIn="@layout/activity_congressional_view">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:src="@drawable/dianne"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senator       Dianne Feinstein"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView2"
        android:textAlignment="center"
        android:typeface="serif"
        android:textColor="#083D85"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@drawable/democracy"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView4"
        android:src="@drawable/email_button"
        android:layout_below="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Sen.Feinstein@opencongress.org"
        android:id="@+id/textView3"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:textColor="#FF040404" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView5"
        android:src="@drawable/website"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://www.feinstein.senate.gov/"
        android:id="@+id/textView4"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignEnd="@+id/textView3"
        android:textColor="#FF040404" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView6"
        android:src="@drawable/tweet"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“#BlackHistoryMonth: My friend Willie Brown was the first African-American mayor of San Francisco.”"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/textView4"
        android:typeface="serif"
        android:textSize="12dp"
        android:textColor="#FF040404" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="More Info..."
        android:id="@+id/toSenator1"
        android:textColor="#083D85"
        style="?android:attr/borderlessButtonStyle"
        android:typeface="serif"
        android:textSize="10dp"
        android:onClick="toSenator1"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/toSenator2" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView7"
        android:src="@drawable/barbara_boxer"
        android:layout_below="@+id/toSenator1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senator       Barbara Boxer"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:typeface="serif"
        android:layout_below="@+id/imageView7"
        android:layout_alignEnd="@+id/imageView7"
        android:textColor="#083D85" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView8"
        android:src="@drawable/democracy"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView9"
        android:src="@drawable/email_button"
        android:layout_below="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sen.Boxer@opencongress.org"
        android:id="@+id/textView7"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignEnd="@+id/textView8"
        android:textColor="#FF040404" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView10"
        android:src="@drawable/website"
        android:layout_below="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://www.boxer.senate.gov/"
        android:id="@+id/textView8"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignStart="@+id/textView5"
        android:textColor="#FF040404" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView11"
        android:src="@drawable/tweet"
        android:layout_below="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“Putting the country first means Obama nominating a Justice and the Senate doing its constitutional duty by voting on the nominee.”"
        android:id="@+id/textView9"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_below="@+id/imageView10"
        android:layout_alignStart="@+id/textView8"
        android:textColor="#FF040404" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="More Info..."
        android:id="@+id/toSenator2"
        android:textColor="#083D85"
        android:typeface="serif"
        android:textSize="10dp"
        android:onClick="toSenator2"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView12"
        android:layout_below="@+id/toSenator2"
        android:src="@drawable/lee"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rep           Barbara             Lee"
        android:id="@+id/textView10"
        android:textAlignment="center"
        android:typeface="serif"
        android:layout_below="@+id/imageView12"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView7"
        android:layout_alignEnd="@+id/imageView12"
        android:textColor="#083D85" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView13"
        android:src="@drawable/democracy"
        android:layout_alignTop="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView14"
        android:src="@drawable/email_button"
        android:layout_below="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rep.Lee@opencongress.org"
        android:id="@+id/textView11"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignStart="@+id/textView7"
        android:textColor="#FF040404" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView15"
        android:src="@drawable/website"
        android:layout_below="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://lee.house.gov/"
        android:id="@+id/textView12"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_alignTop="@+id/imageView15"
        android:layout_alignStart="@+id/textView13"
        android:textColor="#FF040404" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView16"
        android:src="@drawable/tweet"
        android:layout_below="@+id/imageView15"
        android:layout_toEndOf="@+id/imageView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Can’t think of a better way to kick off #WomensHistoryMonth than with champions @FLOTUS &amp; @DrBiden! #WomenSucceed&quot;"
        android:id="@+id/textView13"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_below="@+id/imageView15"
        android:layout_alignStart="@+id/textView9"
        android:textColor="#FF040404" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="More Info..."
        android:id="@+id/toRep"
        android:textColor="#083D85"
        android:typeface="serif"
        android:textSize="10dp"
        android:onClick="toRep"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />

</RelativeLayout>
